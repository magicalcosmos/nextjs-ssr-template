{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"],
      "@pub": ["./public/*"],
      "@img": ["./public/images/*"],
    }
  },
  "include": ["next-env.d.ts",
  "types/**/*.ts",
  "types/**/*.d.ts",
  "@types/**/*.d.ts", "**/*.ts", "**/*.tsx", "configuration/env.test.js", "configuration/env.production.js", "configuration/index.js"],
  "exclude": ["node_modules"]
}